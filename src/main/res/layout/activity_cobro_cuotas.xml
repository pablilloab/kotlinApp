<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCuotas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:clipToPadding="false"
        android:elevation="4dp" />

    <CheckBox
        android:id="@+id/checkBoxDescuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descuento del 5%"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/colorAccent" />

    <TextView
        android:id="@+id/textViewDescuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descuento aplicado: 0.00"
        android:textColor="#333333"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonPagarCuotas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="Pagar Cuotas Seleccionadas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="10dp" />

</LinearLayout>





